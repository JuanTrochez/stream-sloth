  </head>

  <body>
  <%= render "layouts/header" %>
  <div class="container-fluid text-center">
    <div class="col-sm-8 text-left">
      <%= yield %>
    </div>
  </div>
  <%= render "layouts/footer" %>
  </body>
</html>
