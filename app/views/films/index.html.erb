<p id="notice"><%= notice %></p>

<h1>Films</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Realisateur</th>
      <th>Date sortie</th>
      <th>Date production</th>
      <th>Synopsis</th>
      <th>Pays</th>
      <th>Genres</th>
      <th>Duree</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.titre %></td>
        <td><%= film.realisateur %></td>
        <td><%= film.date_sortie %></td>
        <td><%= film.date_production %></td>
        <td><%= film.synopsis %></td>
        <td><%= film.pays %></td>
        <td><%= film.genres %></td>
        <td><%= film.duree %></td>
        <td><%= film.image %></td>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

